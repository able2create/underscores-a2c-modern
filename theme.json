{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"color": {
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultDuotone": false,
			"defaultGradients": false,
			"defaultPalette": false,
			"palette": [
				{
					"slug": "base",
					"color": "#ffffff",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#1a1a1a",
					"name": "Contrast"
				},
				{
					"slug": "primary",
					"color": "#4169e1",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#404040",
					"name": "Secondary"
				},
				{
					"slug": "accent",
					"color": "#800080",
					"name": "Accent"
				},
				{
					"slug": "highlight",
					"color": "#fff9c0",
					"name": "Highlight"
				},
				{
					"slug": "border",
					"color": "#cccccc",
					"name": "Border"
				},
				{
					"slug": "surface",
					"color": "#f5f5f5",
					"name": "Surface"
				}
			],
			"gradients": [
				{
					"slug": "primary-to-secondary",
					"gradient": "linear-gradient(135deg, var(--wp--preset--color--primary) 0%, var(--wp--preset--color--secondary) 100%)",
					"name": "Primary to Secondary"
				}
			]
		},
		"typography": {
			"customFontSize": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"dropCap": true,
			"fluid": true,
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.875rem",
					"name": "Small",
					"fluid": {
						"min": "0.8125rem",
						"max": "0.875rem"
					}
				},
				{
					"slug": "medium",
					"size": "1rem",
					"name": "Medium",
					"fluid": {
						"min": "0.9375rem",
						"max": "1rem"
					}
				},
				{
					"slug": "large",
					"size": "1.25rem",
					"name": "Large",
					"fluid": {
						"min": "1.125rem",
						"max": "1.25rem"
					}
				},
				{
					"slug": "x-large",
					"size": "1.5rem",
					"name": "Extra Large",
					"fluid": {
						"min": "1.25rem",
						"max": "1.5rem"
					}
				},
				{
					"slug": "xx-large",
					"size": "2rem",
					"name": "2X Large",
					"fluid": {
						"min": "1.5rem",
						"max": "2rem"
					}
				}
			],
			"fontFamilies": [
				{
					"slug": "system",
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font"
				},
				{
					"slug": "monospace",
					"fontFamily": "ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"name": "Monospace"
				}
			]
		},
		"spacing": {
			"customSpacingSize": true,
			"spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 7,
				"mediumStep": 1.5,
				"unit": "rem"
			},
			"spacingSizes": [
				{
					"slug": "xs",
					"size": "0.5rem",
					"name": "Extra Small"
				},
				{
					"slug": "s",
					"size": "1rem",
					"name": "Small"
				},
				{
					"slug": "m",
					"size": "1.5rem",
					"name": "Medium"
				},
				{
					"slug": "l",
					"size": "2rem",
					"name": "Large"
				},
				{
					"slug": "xl",
					"size": "3rem",
					"name": "Extra Large"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"shadow": {
			"defaultPresets": false,
			"presets": [
				{
					"slug": "sm",
					"shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
					"name": "Small"
				},
				{
					"slug": "md",
					"shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
					"name": "Medium"
				},
				{
					"slug": "lg",
					"shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
					"name": "Large"
				}
			]
		},
		"custom": {
			"lineHeight": {
				"body": 1.6,
				"heading": 1.2
			},
			"transitions": {
				"duration": "0.2s",
				"timing": "ease-in-out"
			}
		},
		"blocks": {
			"core/button": {
				"border": {
					"radius": true
				},
				"color": {
					"text": true,
					"background": true
				}
			},
			"core/heading": {
				"typography": {
					"fontSizes": [
						{
							"slug": "h1",
							"size": "2.5rem",
							"name": "H1",
							"fluid": {
								"min": "2rem",
								"max": "2.5rem"
							}
						},
						{
							"slug": "h2",
							"size": "2rem",
							"name": "H2",
							"fluid": {
								"min": "1.75rem",
								"max": "2rem"
							}
						},
						{
							"slug": "h3",
							"size": "1.5rem",
							"name": "H3",
							"fluid": {
								"min": "1.375rem",
								"max": "1.5rem"
							}
						}
					]
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--secondary)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--m)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					},
					"outline": {
						"width": "2px",
						"style": "dotted",
						"color": "currentColor",
						"offset": "2px"
					}
				},
				":visited": {
					"color": {
						"text": "var(--wp--preset--color--accent)"
					}
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				"border": {
					"radius": "0.25rem"
				},
				"spacing": {
					"padding": {
						"top": "0.625rem",
						"right": "1.25rem",
						"bottom": "0.625rem",
						"left": "1.25rem"
					}
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--contrast)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--contrast)"
					},
					"outline": {
						"width": "2px",
						"style": "solid",
						"color": "var(--wp--preset--color--primary)",
						"offset": "2px"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "1.2"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "var(--wp--preset--spacing--m)"
					}
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "1.2"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "var(--wp--preset--spacing--m)"
					}
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "1.2"
				},
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "var(--wp--preset--spacing--s)"
					}
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.3"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.3"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "1.3"
				}
			}
		},
		"blocks": {
			"core/navigation": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--s)"
				}
			},
			"core/post-content": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--m)"
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		}
	]
}
